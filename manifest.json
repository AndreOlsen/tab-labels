{
    "manifest_version": 2,
    "name": "Tab Labels",
    "version": "1.0",
    "description": "Label tabs",
    "permissions": ["storage", "tabs"],
    "browser_action": {
      "default_popup": "popup/popup.html",
      "default_icon": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
      }
    },
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "icons": {
      "48": "images/icon48.png"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
  }
  